{
	"parser": "babel-eslint",
	"env": {
		"node": true,
		"es6": true
	},
	"extends": [
		"airbnb",
		"prettier",
		"prettier/react"
	],
	"plugins": [
		"react",
		"jsx-a11y",
		"import",
		"prettier"
	],
	"globals": {
		"__DEV__": true
	},
	"rules": {
		"import/first": "warn",
		"no-unused-vars": "warn",
		"global-require": "off",
		"no-console": "off",
		"no-mixed-operators": "warn",
		"no-use-before-define": "off",
		"prefer-destructuring": "off",
		"react/jsx-filename-extension": "off",
		"react/prop-types": "off",
		"react/jsx-curly-brace-presence": ["warn", { "props": "always", "children": "never" }],
		"semi": ["error", "never"]
	}
}
